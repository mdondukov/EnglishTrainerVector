<resources>
    <!-- Base application theme. -->
    <style name="EngTrainer" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.EngTrainer.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipEndPadding">@dimen/space_8</item>
        <item name="chipMinHeight">@dimen/chip_height</item>
        <item name="chipStartPadding">@dimen/space_8</item>
    </style>

    <style name="TextAppearance.EngTrainer.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/text_lg</item>
    </style>
</resources>